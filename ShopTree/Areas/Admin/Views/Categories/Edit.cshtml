@model ShopTree.Areas.Admin.Models.CategoryViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main class="main">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row justify-content-center">
                <div class="col-md-6 p-2">
                    <div class="card">
                        <div class="card-header">
                            <strong>@Model.Name</strong>
                        </div>
                        @using (Html.BeginForm("Edit", "Categories", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            @Html.HiddenFor(model => model.Id)
                            <input type="hidden" name="page" value="@ViewBag.Page"/>
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="col-form-label">Tên danh mục :</label>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Tên danh mục...." })
                                    @Html.ValidationMessage("Name", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label class="col-form-label">Avatar :</label>
                                    <input type="file" accept="image/*" onchange="loadFile(event)" name="ImageFile"/>
                                    <div class="img-container">
                                        <img src="@Url.Content(Model.ImagePath)" id="preview" alt="@Model.Name" class="image-avatar"/>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                <a class="custom-btn custom-btn-dark" href="@Url.Action("AllCategory", "Categories", new { area = "Admin", page = ViewBag.Page })">
                                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                                </a>
                                <button class="custom-btn custom-btn-info" type="submit">
                                    <i class="fa fa-edit"></i> Lưu
                                </button>
                                <div class="loading-container">
                                    <img src="~/Assets/admin/img/loading.gif" class="loading-img" />
                                    Loading....
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

