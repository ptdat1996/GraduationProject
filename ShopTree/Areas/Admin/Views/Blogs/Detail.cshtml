@model ShopTree.Areas.Admin.Models.BlogViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main class="main">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12 p-2">
                    <div class="card">
                        <div class="card-header">
                            <strong>@Model.Title</strong>
                        </div>
                        <form class="form-horizontal">
                            <div class="card-body">

                                <div class="form-group row">
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Tiêu đề blog :</label>
                                        <div class="col-md-9">
                                            <input class="form-control" value="@Model.Title" readonly="readonly">
                                        </div>
                                    </div>
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Độ ưu tiên :</label>
                                        <div class="col-md-9">
                                            <input class="form-control" value="@Model.Priority" readonly="readonly">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Ngày đăng :</label>
                                        <div class="col-md-9">
                                            <input class="form-control" value="@Model.DatePost.ToString("dd/MM/yyyy")" readonly="readonly">
                                        </div>
                                    </div>
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Lượt xem :</label>
                                        <div class="col-md-9">
                                            <input class="form-control" value="@Model.View" readonly="readonly">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Người đăng :</label>
                                        <div class="col-md-9">
                                            <input class="form-control" value="@Model.EmployeeName" readonly="readonly">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Mô tả :</label>
                                        <div class="col-md-9">
                                            <textarea rows="9" class="form-control" readonly="readonly">@Model.Description</textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Avatar :</label>
                                        <div class="col-md-9">
                                            <div class="img-container col-md-9">
                                                <img src="@Url.Content(Model.ImagePath)" id="preview" alt="@Model.Title" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <a class="custom-btn custom-btn-dark" href="@Url.Action("AllBlog", "Blogs", new { area = "Admin", page = ViewBag.Page })">
                                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                                </a>
                                <a class="custom-btn custom-btn-info" href="@Url.Action("Edit", "Blogs", new { area = "Admin", id = Model.Id, page = ViewBag.Page })">
                                    <i class="fa fa-edit"></i> Chỉnh sửa
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


