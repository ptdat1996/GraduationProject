@model ShopTree.Models.Customer
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main class="main">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12 p-2">
                    <div class="card">
                        <div class="card-header">
                            <strong>Đổi mật khẩu</strong>
                        </div>

                        <form class="form-horizontal">
                            <div class="card-body">

                                <div class="form-group row">
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Họ và tên :</label>
                                        <div class="col-md-9">
                                            <input value="@Model.Name" class="form-control" readonly="readonly"/>
                                        </div>
                                    </div>

                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Email :</label>
                                        <div class="col-md-9">
                                            <input value="@Model.Email" class="form-control" readonly="readonly" />
                                        </div>
                                    </div>
                                </div>                           

                                <div class="form-group row">
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Số điện thoại :</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>

                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Tổng tiền :</label>
                                        <div class="col-md-9">
                                            <input name="LevelName" value="@Model.TotalMoney" class="form-control" readonly="readonly" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-6 row">
                                        <label class="col-md-3 col-form-label">Địa chỉ :</label>
                                        <div class="col-md-9">
                                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @rows = "5", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="row">
                                    <div class="mr-1">
                                        <a class="custom-btn custom-btn-dark" href="@Url.Action("AllCustomer", "Customers", new { area = "Admin", page = ViewBag.Page })">
                                            <i class="fa fa-arrow-left"></i> Quay lại danh sách
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

