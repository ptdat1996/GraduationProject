@model PagedList.IPagedList<ShopTree.Models.Customer>
@using PagedList.Mvc
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main class="main">

    <!-- Breadcrumb -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item">Admin</li>
        <li class="breadcrumb-item active"><a href="@Url.Action("AllCustomer", "Custmoers", new { area = "Admin" })">@ViewBag.Title</a></li>
    </ol>

    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">                     
                        <div class="card-body">
                            <table class="table table-responsive-sm table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Họ và tên</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Tổng tiền</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.TotalMoney</td>
                                            <td class="td-contain-button">
                                                <a class="custom-btn custom-btn-warning" href="@Url.Action("Detail", "Customers", new { area = "Admin", id = item.Id, page = Model.PageNumber })">
                                                    <i class="fa fa-check-square-o"></i>
                                                    Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="pageinate">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="pagination">
                                    <div class="row">
                                        <div>
                                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                                            <span>
                                                @Html.PagedListPager(Model, page => Url.Action("AllCustomer", "Customers", new { page, area = "Admin" }))
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/.col-->
                </div>
                <!--/.row-->
            </div>
        </div>
        <!-- /.conainer-fluid -->
    </div>
</main>


