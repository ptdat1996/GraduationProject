@model List<ShopTree.Models.ProductViewModel>

<div id="collection">
    <div class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-9">

                    <div class="breadcrumb clearfix">
                        <ul>
                            <li class="home">
                                <a title="Đến trang chủ" href="@Url.Action("Index", "Home")"><span itemprop="title">Trang chủ</span></a>
                            </li>
                            <li class="category17 icon-li">
                                <div class="link-site-more">
                                    <a title="" href="javascript:void(0)" itemprop="url">
                                        <span itemprop="title">@ViewBag.Title</span>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="product-content">
                        <h1 title="products" class="page_heading">@ViewBag.Title</h1>
                        <div class="product_list grid clearfix">
                            @foreach (var item in Model)
                            {
                                Html.RenderAction("_ProductItem", "Products", item);
                            }

                            <div class="icon-loading" style="display: none;">
                                <div class="uil-ring-css">
                                    <div></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Template--
                    --End-->
                </div>
                @{Html.RenderAction("_CategoriesRight", "Home");}
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $(".menu-quick-select ul").hide();
        $(".menu-quick-select").hover(function () {
            $(".menu-quick-select ul").show();
        }, function () {
            $(".menu-quick-select ul").hide();
        });
    });
</script>