<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="menu-account ng-scope">
                    <h3>
                        <span>
                            Quản lý cá nhân
                        </span>
                    </h3>
                    <ul>
                        <li><a href="@Url.Action("CustomerProfile", "Customers")"><i class="glyphicon glyphicon-user"></i> Thông tin tài khoản</a></li>
                        <li><a href="@Url.Action("CheckOrder", "ShoppingCart")"><i class="glyphicon glyphicon-list-alt"></i> Đơn hàng của tôi</a></li>
                        <li class="active"><a href="javascript:void(0)"><i class="fa fa-key"></i> Thay đổi mật khẩu</a></li>
                        <li><a href="@Url.Action("Logout", "Customers")"><i class="glyphicon glyphicon-log-out"></i> Thoát</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9">
                <div class="breadcrumb clearfix">
                    <ul>
                        <li class="home">
                            <a title="Đến trang chủ" href="@Url.Action("Index", "Home")" itemprop="url"><span itemprop="title">Trang chủ</span></a>
                        </li>
                        <li class="icon-li"><strong>Thay đổi mật khẩu</strong> </li>
                    </ul>
                </div>
                <div class="change-password-content clearfix">
                    <h1 class="title"><span>Thay đổi mật khẩu</span></h1>
                    @if (ViewBag.MessageFailed != null)
                    {
                        <div class="alert-danger alert fade in">
                            <button data-dismiss="alert" class="close"></button>
                            <i class="fa-fw fa fa-remove"></i>
                            <span>@ViewBag.MessageFailed</span>
                        </div>
                    }
                    @if (ViewBag.MessageSuccess != null)
                    {
                        <div class="alert-info alert fade in">
                            <button data-dismiss="alert" class="close"></button>
                            <i class="fa-fw fa fa-check"></i>
                            <span>@ViewBag.MessageSuccess</span>
                        </div>
                    }
                        <div class="col-md-8 col-md-offset-2 col-xs-12 col-sm-12 col-xs-offset-0 col-sm-offset-0">
                            @using (Html.BeginForm("ChangePassword","Customers",FormMethod.Post,new { @class = "form-horizontal" }))
                            {
                                <div class="form-group">
                                    <label for="" class="col-sm-4 control-label">Mật khẩu cũ</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" name="OldPassword" required="required">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="col-sm-4 control-label">Mật khẩu mới</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" name="NewPassword" required="required">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="col-sm-4 control-label">Nhập lại mật khẩu</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" name="ReNewPassword" required="required">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-4 col-sm-8">
                                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                                    </div>
                                </div>
                            }
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".menu-quick-select ul").hide();
        $(".menu-quick-select").hover(function () {
            $(".menu-quick-select ul").show();
        }, function () {
            $(".menu-quick-select ul").hide();
        });
    });
</script>