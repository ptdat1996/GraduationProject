@model ShopTree.Models.Blog

<div id="article">
    <div class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="breadcrumb clearfix">
                        <ul>
                            <li class="home">
                                <a title="Đến trang chủ" href="@Url.Action("Index", "Home")" itemprop="url"><span itemprop="title">Trang chủ</span></a>
                            </li>
                            <li class="icon-li">
                                <a title="Tin tức" href="@Url.Action("Index", "Blogs")" itemprop="url"><span itemprop="title">Blog</span></a>
                            </li>
                            <li class="icon-li"><strong>@Model.Title</strong></li>
                        </ul>
                    </div>

                    <div class="news-detail articles_page clearfix">
                        <h1 class="page-heading">@Model.Title</h1>
                        <div class="content-page">                           
                            <div class="content_article rte clearfix row">
                                <div>
                                    <div style="float : left;margin-right : 12px;" class="col-md-6">
                                        <img style="width:100%" src="@Url.Content("~/" + Model.Avatar)" />
                                    </div>
                                    <p>@Model.Description</p>
                                </div>
                            </div>                           
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <!--Begin-->
                    <div class="box-support-online">
                        <h3><span>Hỗ trợ trực tuyến</span></h3>
                        <div class="support-online-block">
                            <div class="support-hotline">
                                HOTLINE<br><span>0934 087 969</span>
                            </div>
                        </div>
                    </div>
                    <!--End-->
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".menu-quick-select ul").hide();
        $(".menu-quick-select").hover(function () {
            $(".menu-quick-select ul").show();
        }, function () {
            $(".menu-quick-select ul").hide();
        });
    });
</script>